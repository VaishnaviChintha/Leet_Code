import java.util.*;
public class Solution {
    public int maximumBags(int[] capacity, int[] rocks, int additionalRocks) {
        int[] available = new int[rocks.length];
        for(int i=0;i<rocks.length;i++){
            available[i]=capacity[i]-rocks[i];
        }
        Arrays.sort(available);
        int count=0;
        for(int i=0;i<rocks.length;i++){
            if(additionalRocks>=available[i]){
                additionalRocks-=available[i];
                available[i]=0;
                count++;
            }else{
                break;
            }
        }
        return count;
    }
 public static void main(String[] args) {
        Solution sol = new Solution();
        int[] capacity1 = {2, 3, 4, 5};
        int[] rocks1 = {1, 2, 4, 4};
        int additionalRocks1 = 2;
        System.out.println(sol.maximumBags(capacity1, rocks1, additionalRocks1)); 
    }
}
