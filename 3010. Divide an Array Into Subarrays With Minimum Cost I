class Solution {
    public int minimumCost(int[] nums) {
        int first = nums[0];

        int min1 = Integer.MAX_VALUE;
        int min2 = Integer.MAX_VALUE;

        for (int i = 1; i < nums.length; i++) {
            if (nums[i] < min1) {
                min2 = min1;
                min1 = nums[i];
            } else if (nums[i] < min2) {
                min2 = nums[i];
            }
        }
  }
  public static void main(String[] args) {
        Solution sol = new Solution();

        int[] nums1 = {5, 3, 4, 1};
        System.out.println(sol.minimumCost(nums1)); // Output: 9

        int[] nums2 = {1, 2, 3};
        System.out.println(sol.minimumCost(nums2)); // Output: 6

        int[] nums3 = {10, 5, 2, 8, 1};
        System.out.println(sol.minimumCost(nums3)); // Output: 13
    }
}
