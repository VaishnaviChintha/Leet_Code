class Solution {
    public int[] diStringMatch(String s) {
        int[] res = new int[s.length() + 1];
        int smallest = 0, largest = s.length();
        int i = 0;

        for (int k = 0; k < s.length(); k++) {
            if (s.charAt(k) == 'I') {
                res[i++] = smallest++;
            } else {
                res[i++] = largest--;
            }
        }

        res[s.length()] = smallest;
        return res;
    }
}
