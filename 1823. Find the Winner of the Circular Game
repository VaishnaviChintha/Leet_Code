import java.util.*;

public class Solution {
    // We add +1 at the end because our logic uses 0-based indexing
    public int findTheWinner(int n, int k) {
        return f(n, k) + 1;
    }

    // Recursive helper function
    // Returns the index (0-based) of the winner when there are n friends
    private int f(int n, int k) {

        // If only one friend is left, they are obviously the winner
        if (n == 1) {
            return 0;
        }

        // First, find the winner when there are n-1 friends
        int prevWinner = f(n - 1, k);

        // Adjust the position after adding the nth friend back
        // Modulo keeps the position inside the circle
        return (prevWinner + k) % n;
    }
    // Main method
    public static void main(String[] args) {
        Solution solution = new Solution();
        System.out.println(solution.findTheWinner(5, 2));
        System.out.println(solution.findTheWinner(6, 5)); 
    }
}
